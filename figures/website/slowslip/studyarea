#!/bin/csh -f

set output = studyarea.eps

# Small map
set x1 = 176
set x2 = 179
set y1 = -40
set y2 = -37
set Rop = $x1/$x2/$y1/$y2
set Jop = m177.5/-38.5/6.0

gmt pscoast -R$Rop -J$Jop -Ba1f0.5::WESN -W0.1p -G255/255/224 -S224/255/255 -Df -Na -Y5 -P -K >! $output

# Locations of GPS stations
cat << END >> arrays.dat
178.291223348 -38.268212852
177.07635309 -39.65787439
178.211143529 -38.48796629
177.886034958 -38.635336932
178.30335250666 -37.56104136669
177.667786 -39.01610531
177.06976 -39.17226
176.93673005 -39.332320765
177.90700192 -39.152563727
178.1291161 -38.6437598
177.883276367 -38.92257263
178.257359581 -38.07141492
177.234413566 -39.077210643
178.4087 -37.825
END

# Names of GPS stations
cat << END >> names.dat
178.591223348 -38.268212852 ANAU
177.37635309 -39.65787439 CKID
178.511143529 -38.48796629 CNST
177.636034958 -38.635336932 GISB
178.60335250666 -37.56104136669 HIKB
177.467786 -38.91610531 KOKO
177.36976 -39.17226 KUTA
177.23673005 -39.332320765 LEYL
178.20700192 -39.152563727 MAHI
178.4291161 -38.6437598 MAKO
178.183276367 -38.92257263 PARI
178.557359581 -38.07141492 PUKE
176.984413566 -39.027210643 WAHU
178.7087 -37.825 WMAT
END

gmt psxy arrays.dat -R$Rop -J$Jop -St0.5 -Gred -O -K >> $output

gmt pstext names.dat -R$Rop -J$Jop -F+f15p -O >> $output

rm arrays.dat
rm names.dat
