#!/bin/csh -f

set output = studyarea.eps

# Small map
set x1 = 176
set x2 = 179
set y1 = -40
set y2 = -37
set Rop = $x1/$x2/$y1/$y2
set Jop = m177.5/-38.5/6.0

gmt pscoast -R$Rop -J$Jop -Ba0.5f0.25::WESN -W0.1p -G255/255/224 -S224/255/255 -Df -Na -Y5 -P -K >! $output

