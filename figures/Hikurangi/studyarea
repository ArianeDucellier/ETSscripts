# Large map
set x1 = 165
set x2 = 180
set y1 = -48
set y2 = -34
set Rop = $x1/$x2/$y1/$y2
set Jop = m172.5/-41/0.5

gmt pscoast -R$Rop -J$Jop -Ba5f1::wESn -W0.1p -S224/255/255 -G255/255/224 -Df -Na -X0.5 -Y10.5 -O -K >> $output

# Limits of small map
cat << END >> square.dat
176.5 -40
176.5 -37
179.5 -37
179.5 -40
176.5 -40
END

gmt psxy square.dat -R$Rop -J$Jop -Wthicker,red -O >> $output

rm *.dat
